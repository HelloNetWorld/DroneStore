@model EditUserViewModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="content-padder">
    <div class="m-3">
        @if (Model != null && Model.Errors.Any())
        {
            <div class="message-warnings">
                <ul>
                    @foreach (var error in Model.Errors)
                    {
                        <li>@error</li>
                    }
                </ul>
            </div>
        }
        <form asp-action="Edit" method="post" id="edit-user">
            @Html.HiddenFor(x => x.Id);
            <div class="form-group">
                @Html.LabelFor(x => x.UserName)
                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", placeholder = "UserName", name = "user_name" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Email)
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email", name = "email" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Roles)
                @Html.TextBoxFor(x => x.Roles, new { @class = "form-control", placeholder = "Roles", name = "roles" })
            </div>
            <div class="text-center">
                <button class="btn btn-primary" type="submit">Save</button>
                <a asp-action="Index" asp-area="Admin" asp-controller="User"
                   class="btn btn-secondary">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>
