@model DashboardViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="content-padder content-background">
    <div class="uk-section-small uk-section-default header">
        <div class="uk-container uk-container-large">
            <h1><span class="ion-speedometer"></span>Dashboard</h1>
            <p>
                Welcome back, @User.Identity.Name!
            </p>
            <ul class="uk-breadcrumb">
                <li><a asp-action="Index" asp-controller="Home" asp-area="Admin">Home</a></li>
                <li><span href="#">Dashboard</span></li>
            </ul>
        </div>
    </div>
    <div class="uk-section-small">
        <div class="uk-container uk-container-large">
            <div uk-grid class="uk-child-width-1-1@s uk-child-width-1-2@m uk-child-width-1-4@xl">
                <div>
                    <div class="uk-card uk-card-default uk-card-body">
                        <span class="statistics-text">Registrations</span>
                        <br />
                        <span class="statistics-number">
                            @Model.TotalRegistrations
                        </span>
                        <br />
                        <span class="statistics-number">
                            @Model.RegistrationsWeekly
                            @if (Model.RegistrationsPercentageWeekly > 0)
                            {
                                <span class="uk-label uk-label-success">
                                    @Model.RegistrationsPercentageWeekly% weekly <span class="ion-arrow-up-c"></span>
                                </span>
                            }
                        </span>
                    </div>
                </div>
                <div>
                    <div class="uk-card uk-card-default uk-card-body">
                        <span class="statistics-text">Total Orders</span>
                        <br />
                        <span class="statistics-number">
                            @Model.TotalOrders
                        </span>
                        <br />
                        <span class="statistics-number">
                            @Model.OrdersWeekly
                            @if (Model.OrdersPercentageWeekly > 0)
                            {
                                <span class="uk-label uk-label-success">
                                    @Model.OrdersPercentageWeekly% weekly <span class="ion-arrow-up-c"></span>
                                </span>
                            }
                        </span>
                    </div>
                    <div>
                        <div class="uk-card uk-card-default uk-card-body">
                            <span class="statistics-text">Total Income</span>
                            <br />
                            <span class="statistics-number">
                                @Model.TotalIncome
                            </span>
                            <br />
                            <span class="statistics-number">
                                @Model.IncomeWeekly
                                @if (Model.IncomePercentageWeekly > 0)
                                {
                                    <span class="uk-label uk-label-success">
                                        @Model.IncomePercentageWeekly% weekly <span class="ion-arrow-up-c"></span>
                                    </span>
                                }
                            </span>
                        </div>
                    </div>
                    <div uk-grid class="uk-child-width-1-1@s uk-child-width-1-2@l">
                        @*<div>
                                <div class="uk-card uk-card-default">
                                    <div class="uk-card-header">
                                        Website Traffic
                                    </div>
                                    <div class="uk-card-body">
                                        <canvas id="chart1"></canvas>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="uk-card uk-card-default">
                                    <div class="uk-card-header">
                                        Website Traffic
                                    </div>
                                    <div class="uk-card-body">
                                        <canvas id="chart2"></canvas>
                                    </div>
                                </div>
                            </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>