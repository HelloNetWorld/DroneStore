@model CreateItemViewModel

@{
    ViewBag.Title = "Create";
}

<div class="content-padder">
    <div class="m-3">
        @if (Model != null && Model.ValidationErrors.Any())
        {
            <div class="message-warnings">
                <ul>
                    @foreach (var error in Model.ValidationErrors)
                    {
                        <li>@error</li>
                    }
                </ul>
            </div>
        }

        <form asp-action="Create" method="post" enctype="multipart/form-data" id="create-catalog-item-form">
            <div class="form-group">
                <label asp-for="Item.Name"></label>
                <input asp-for="Item.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Item.Brand"></label>
                <input asp-for="Item.Brand" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Item.Quantity"></label>
                <textarea asp-for="Item.Quantity" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Item.Price"></label>
                <input asp-for="Item.Price" class="form-control" />
            </div>
            <div class="form-group">
                <label for="catalog-item-input-file">File image</label>
                <input id="catalog-item-input-file" type="file" name="Image" class="form-control-file">
            </div>
            <div class="form-group">
                <img id="image-catalog-item-preview" class="img-thumbnail" src="~/icons/no-product-image.png" />
            </div>
            <div class="text-center">
                <button class="btn btn-primary" type="submit">Save</button>
                <a asp-action="Index" asp-area="Admin" asp-controller="Catalog"
                   class="btn btn-secondary">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>
