@model IEnumerable<Order>
@{
    ViewData["Title"] = "All orders";
}

<div class="content-padder">
    <div class="m-3">
        <table class="table table-striped table-bordered table-sm">
            <tr>
                <th>ID</th>
                <th>Created Date</th>
                <th>First Name</th>
                <th class="text-right">Last Name</th>
                <th class="text-center">Total</th>
                <th class="text-center">Phone</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var order in Model)
            {
                <tr>
                    <td class="text-right">@order.OrderId</td>
                    <td>@order.CreationDate</td>
                    <td class="text-center">@order.FirstName</td>
                    <td class="text-right">@order.LastName</td>
                    <td class="text-center">@order.OrderTotal</td>
                    <td class="text-center">@order.PhoneNumber</td>
                    <td class="text-center">
                        <div class="btn btn-group">
                            <a asp-action="Details" class="btn btn-sm btn-primary mr-1"
                               asp-route-Id="@order.OrderId">
                                Details
                            </a>
                            <form asp-action="Delete" method="post">
                                <input type="hidden" name="Id" value="@order.OrderId" />
                                <button type="submit" class="btn btn-danger btn-sm">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>